					</Panel>

					                  
					<Panel class="top-bottom-flow full-width vertical-align-bottom">
						
						                     
						<Panel class="full-width">
=							<Label class="normal-label" text="stat_total_health_removed" />
							<Label class="value normal-value" text="{s:stat_total_health_removed}" />
						</Panel>

						               
						<Panel class="full-width">
							<Label class="normal-label" text="stat_total_rounds_played" />
							<Label class="value normal-value" text="{s:stat_total_rounds_played}" />
						</Panel>

					</Panel>
				</Panel>

				<Panel class="vertical-divider" />				

				            
				<Panel class="mainrow__kdr full-height stats-panel__cell">

					                                 
					<Panel class="top-bottom-flow full-width">
						<Label class="normal-heading" text="stat_average_kd" />
						<Panel id="stat_average_kd" class="digitpanel-container digitpanel-container--xlarge" />
						                                                                             
					</Panel>

					                  
					<Panel class="top-bottom-flow full-width vertical-align-bottom">
						
						                    
						<Panel class="full-width">
=							<Label class="normal-label" text="stat_total_kills" />
							<Label class="value normal-value" text="{s:stat_total_kills}" />
						</Panel>

						                     
						<Panel class="full-width">
=							<Label class="normal-label" text="stat_total_deaths" />
							<Label class="value normal-value" text="{s:stat_total_deaths}" />
						</Panel>

					</Panel>
				</Panel>

				<Panel class="vertical-divider" />

				              
				<Panel class="mainrow__kills full-height stats-panel__cell">

					                                 
					<Panel class="top-bottom-flow full-width">
						<Label class="normal-heading" text="stat_total_kills" />
						<Panel id="stat_total_kills" class="digitpanel-container digitpanel-container--large" />
						                                                                           
					</Panel>

					                  
					<Panel class="top-bottom-flow full-width vertical-align-bottom">
						
						           
						<Panel class="full-width">
=							<Label class="normal-label" text="stat_total_2k" />
							<Label class="value normal-value" text="{s:stat_total_2k}" />
						</Panel>

						           
						<Panel class="full-width hide-wingman">
=							<Label class="normal-label" text="stat_total_3k" />
							<Label class="value normal-value" text="{s:stat_total_3k}" />
						</Panel>

						           
						<Panel class="full-width hide-wingman">
=							<Label class="normal-label" text="stat_total_4k" />
							<Label class="value normal-value" text="{s:stat_total_4k}" />
						</Panel>						
					</Panel>
				</Panel>

				<Panel class="vertical-divider" />				

				            
				<Panel class="mainrow__1vx stats-panel__cell top-bottom-flow full-height">

				              
				<Label class="normal-heading" text="stat_1vx" />

				<Panel class="full-width full-height top-bottom-flow">
							
					            
					<Panel class="onevx__1v1 stats-panel__cell__sub full-width">

							                  
						<Label class="large-heading" text="stat_1v1" />

						                  
						<Panel class="top-bottom-flow full-width vertical-align-bottom">
							
							                
							<Panel class="full-width">
	=							<Label  class="normal-label" text="stat_average_1v1" />
								<Label  class="value normal-value" text="{s:stat_average_1v1}" />
							</Panel>

							                      
							<Panel class="full-width">
	=							<Label  class="normal-label" text="stat_total_1v1_attempts" />
								<Label  class="value normal-value" text="{s:stat_total_1v1_attempts}" />
							</Panel>
					
						</Panel>
					</Panel>

					<Panel class="horizontal-divider" />					
			
						            
						<Panel class="onevx__1v2 stats-panel__cell__sub full-width">

							                  
							<Label class="large-heading" text="stat_1v2" />

							                  
							<Panel class="top-bottom-flow full-width vertical-align-bottom">
								
								                
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_average_1v2" />
									<Label class="value normal-value" text="{s:stat_average_1v2}" />
								</Panel>

								                      
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_total_1v2_attempts" />
									<Label class="value normal-value" text="{s:stat_total_1v2_attempts}" />
								</Panel>
						
							</Panel>
						</Panel>

					</Panel>
				</Panel>

				<Panel class="vertical-divider" />	

				                     
				<Panel id="BestWeapons" class="mainrow__weapons full-height top-bottom-flow stats-panel__cell">

					                
					<Panel class="vertical-align-top full-width">

						              
						<Label class="normal-heading" text="stat_best_weapon" />

						           
						<Label class="normal-label-no-align horizontal-center weapons__row__kd" text="stat_average_kd_short" />

						                    
						<Label class="normal-label-no-align horizontal-align-right" text="stat_total_kills" />

					</Panel>

					              
					<Panel id="Wep1" class="full-width weapons__row">
						
						                    
						<Image id="WeaponImage" class="horizontal-align-left" scaling="stretch-to-fit-preserve-aspect"/>

						            
						<Label class="value normal-value--no-align horizontal-center weapons__row__kd" text="{s:score}" />

						                    
						<Label class="value normal-value" text="{s:total}" />

					</Panel>

					<Panel class="horizontal-divider" />					

					              
					<Panel id="Wep2" class="full-width weapons__row">
						
						                    
						<Image id="WeaponImage" class="horizontal-align-left" scaling="stretch-to-fit-preserve-aspect"/>

						            
						<Label class="value normal-value--no-align horizontal-center weapons__row__kd" text="{s:score}" />

						                    
						<Label class="value normal-value" text="{s:total}" />

					</Panel>

					<Panel class="horizontal-divider" />					

					              
					<Panel id="Wep3" class="full-width weapons__row">
						
						                    
