						<Label class="value normal-value" text="{s:total}" />

					</Panel>

					<Panel class="horizontal-divider" />					

					              
					<Panel id="Wep4" class="full-width weapons__row">
						
						                    
						<Image id="WeaponImage" class="horizontal-align-left" />

						            
						<Label class="value normal-value--no-align horizontal-center weapons__row__kd" text="{s:score}" />

						                    
						<Label class="value normal-value" text="{s:total}" />

					</Panel>

				</Panel>                      
			</Panel>                    

			                   
			<Panel class="left-right-flow stats-panel--2ndrow full-width">

				                   
				<Panel class="stats-panel stats-panel--mapmates full-height left-right-flow">

					            
					<TooltipPanel class="half-width full-height" src="file://{resources}/layout/tooltips/stats/tooltip_playerstats_generic.xml" src-id="id" tooltip-class="limit-width" src-parameters='loc=stat_best_map_desc'>
						<Panel id="BestMap" class="full-width full-height stats-panel__cell left-right-flow">

							<Panel class="top-bottom-flow" style="width: fill-parent-flow( 1.0 ); padding-right:10px;">
								<Label class="normal-heading" text="stat_best_map" />
								<Label class="normal-label" text="{s:value}" />
							</Panel>

							<Image id="MapIcon" class="stat__map__icon" texturewidth="48" textureheight="-1"/>			
						
						</Panel>
					</TooltipPanel>

					<Panel class="vertical-divider" />					

					             
					<TooltipPanel class="half-width full-height" src="file://{resources}/layout/tooltips/stats/tooltip_playerstats_generic.xml" src-id="id" tooltip-class="limit-width" src-parameters='loc=stat_best_mate_desc'>
						<Panel id="BestMate" class="full-width full-height stats-panel__cell left-right-flow">

							<Panel class="top-bottom-flow" style="width: fill-parent-flow( 1.0 ); padding-right:10px;">
								<Label class="normal-heading" text="stat_best_mate" />
								<Label class="normal-label" text="{s:value}" />
							</Panel>

							<CSGOAvatarImage id="JsAvatarImage" class="stat__mate__icon" defaultsrc="file://{images}/icons/ui/player.svg"/>	

						</Panel>
					</TooltipPanel>		
				</Panel>                    

				             
				<Panel class="stats-panel stats-panel--misc full-height left-right-flow">

					           
					<TooltipPanel class="full-height width-fill-parent-flow" src="file://{resources}/layout/tooltips/stats/tooltip_playerstats_generic.xml" src-id="id" tooltip-class="limit-width" src-parameters='loc=stat_grenades_desc'>
						<Panel class="stats-panel__cell stats-panel__cell--he full-height full-width">

							              
							<Label class="normal-heading" text="stat_grenades" />

							                  
							<Panel class="top-bottom-flow full-width vertical-align-bottom">
								
								                     
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_average_grenade" />
									<Label class="value normal-value" text="{s:stat_average_grenade_success}" />
								</Panel>

								                 
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_total_grenade" />
									<Label class="value normal-value" text="{s:stat_total_grenade_attempts}" />
								</Panel>

							</Panel>

						</Panel>
					</TooltipPanel>

					<Panel class="vertical-divider" />	

					                
					<TooltipPanel class="full-height width-fill-parent-flow" src="file://{resources}/layout/tooltips/stats/tooltip_playerstats_generic.xml" src-id="id" tooltip-class="limit-width" src-parameters='loc=stat_flash_desc'>
