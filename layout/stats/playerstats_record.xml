<root>
	<styles>
		<include src="file://{resources}/styles/csgostyles.css" />
		<include src="file://{resources}/styles/stats/playerstats.css" />
	</styles>

	<scripts>
	</scripts>

	<Panel class="no-data playerstats__records__root full-width">
		<Panel id="id-playerstats__record" class="top-bottom-flow">

			                   
			<Panel class="stats-panel stats-panel--mainrow">

				                       
				<Panel class="mainrow__matchesplayed full-height stats-panel__cell">

					                                 
					<Panel class="top-bottom-flow full-width">
						<Label class="normal-heading" text="num_matches" />
						<Panel class="digitpanel-container--xlarge">
							<Panel id="matches" class="digitpanel-container digitpanel-container--xlarge" />
						</Panel>
						                                                                      
					</Panel>

					                  
					<Panel class="top-bottom-flow full-width vertical-align-bottom">
						
						             
						<Panel class="full-width left-right-flow">
							<Panel class="horizontal-align-left matchesplayed__dot match--win" />
							<Label class="normal-label" text="stat_total_wins" />
							<Label class="value normal-value" text="{s:stat_total_wins}" />
						</Panel>

						             
						<Panel class="full-width left-right-flow">
							<Panel class="horizontal-align-left matchesplayed__dot match--tie" />
							<Label class="normal-label" text="stat_total_ties" />
							<Label class="value normal-value" text="{s:stat_total_ties}" />
						</Panel>

						               
						<Panel class="full-width left-right-flow">
							<Panel class="horizontal-align-left matchesplayed__dot match--loss" />
							<Label class="normal-label" text="stat_total_losses" />
							<Label class="value normal-value" text="{s:stat_total_losses}" />
						</Panel>
						
					</Panel>

				</Panel>

				<Panel class="vertical-divider" />

				            
				<Panel class="mainrow__adr full-height stats-panel__cell">

					                                 
					<Panel class="top-bottom-flow full-width">
						<Label class="normal-heading" text="stat_average_health_removed" />
