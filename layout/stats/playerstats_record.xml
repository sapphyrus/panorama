								</Panel>

								                 
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_total_flash" />
									<Label class="value normal-value" text="{s:stat_total_flash_attempts}" />
								</Panel>

							</Panel>

						</Panel>	
					</TooltipPanel>	

					<Panel class="vertical-divider" />	

					              
					<TooltipPanel class="full-height width-fill-parent-flow" src="file://{resources}/layout/tooltips/stats/tooltip_playerstats_generic.xml" src-id="id" tooltip-class="limit-width" src-parameters='loc=stat_entry_desc'>
						<Panel class="stats-panel__cell stats-panel__cell--ek full-height full-width">

							              
							<Label class="normal-heading" text="stat_entry" />

							                  
							<Panel class="top-bottom-flow full-width vertical-align-bottom">
								
								                     
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_average_entrykd" />
									<Label class="value normal-value" text="{s:stat_average_entrykd}" />
								</Panel>

								                 
								<Panel class="full-width">
		=							<Label class="normal-label" text="stat_total_entry_attempts" />
									<Label class="value normal-value" text="{s:stat_total_entry_attempts}" />
								</Panel>

							</Panel>

						</Panel>
					</TooltipPanel>		

				</Panel>              
