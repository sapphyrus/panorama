    <snippet name="AvatarSpecSnippet">
      <Panel acceptsinput="false">

        <Panel id="Visible" class="AvatarSpec">
          <Panel id="AvatarSpec__ImageBG">
            <CSGOAvatarImage id="AvatarImage" class="AvatarSpec__Internal Avatar__PlayerImage"/>
            <CSGOAvatarHealthBar id="HealthBar" class="AvatarSpec__HealthBar"/>
          </Panel>

          <Image id="Skull" class="AvatarSpec__Skull" src="file://{images}/hud/teamcounter/teamcounter_skull.png"/>

          <Image id="Bot" class="AvatarSpec__Bot" src="file://{images}/hud/teamcounter/teamcounter_botavatar.png"/>

          <Image id="PlayerColor" class="AvatarSpec__PlayerColor" src="file://{images}/hud/teamcounter/teamcounter_playercolor.png"/>
          
          <Label id="PlayerLetter" class="AvatarSpec__PlayerLetter"/>
          
          <Label id="PlayerNumber" class="AvatarSpec__PlayerNumber" text="0"/>
        
        </Panel>

      </Panel>
    </snippet>

