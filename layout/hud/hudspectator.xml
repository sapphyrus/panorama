                    <Image id="Weapon3" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                    <Image id="Weapon4" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                    <Image id="Weapon5" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                    <Image id="Weapon6" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                    <Image id="Weapon7" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                    <Image id="Weapon8" class="SmallWeaponIcon" textureheight="20" scaling="none" />
                  </Panel>             
                </Panel>    
            </Button>
 
            <Panel id="PlayerPanelDeadBG" class="PlayerPanel_DeadBG_L"/>
        
            <Panel class="weapon-selection-item-icon">
              <Image id="PlayerPanel_MainWeapon" class="PlayerPanel_MainWeapon_L" src="file://{images}/icons/equipment/m4a1_silencer.svg" textureheight="45" scaling="none" />
            </Panel>
          </Panel>
          
          <Panel id="PlayerPanelAvatarBucket" class="PlayerPanel__AvatarBucket_L"/>
                                                                                                                                                                                      
          <Panel id="PlayerPanelHighlight" class="PlayerPanel_Highlight">
                                                      
                                                                  
          </Panel>
      </Panel>

