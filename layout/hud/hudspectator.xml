	<CSGOHudSpectator class="hud-spectator">
    <Panel id="SpectatorScoreboard" class="SpectatorScoreboardRoot">
      <Panel id="ScoreAndTime">
        <Panel class="hrTop" />
        <Panel class="hrBot" />
        <Panel class="ScoreAndTimeBG"/>
        <Panel id="TimeAndBomb">
          <Label id="Timer" class="ScoreboardTimer mono-spaced-font-bold" text="0:00"/>
          <Panel class="BombRoot">
            <Image id="BombPlanted" src="file://{images}/hud/teamcounter/teamcounter_bomb-planted.svg" texturewidth="256" textureheight="-1"/>
            <Image id="BombPlantedLines" src="file://{images}/hud/teamcounter/teamcounter_bomb-planted-lines.svg" texturewidth="256" textureheight="-1" />
            <Image id="BombDefused" src="file://{images}/hud/teamcounter/teamcounter_bomb-planted-defused.svg" texturewidth="256" textureheight="-1" />
          </Panel>     
        </Panel>
        <Label id="RoundNumber" text="XXXXX X/XX"/>
        
        <Panel id="ScoreAndNameL" class="TeamScoreAndNameL" text="XX">
          <Label id="ScoreL" class="TeamScoreL TeamScore" text="XX"/>
          <Image id="TeamLogoL" class="SpecTeamLogo" src=""/>
          <Label id="TeamNameL" html="true" class="SpecTeamNameL" text=""/>
        </Panel>

        <Panel id="ScoreAndNameR" class="TeamScoreAndNameR" text="XX">
          <Label id="ScoreR" class="TeamScoreR TeamScore" text="XX"/>
          <Image id="TeamLogoR" class="SpecTeamLogo" src=""/>
          <Label id="TeamNameR" html="true" class="SpecTeamNameR" text=""/>
        </Panel>
      </Panel>
      <Panel id="BestOfPips">
        <Panel class="hrTop" />
        <Panel class="hrBot" />
		<Panel id="BestOfPipsPanel" class="BestOfPipsPanel">
			<Panel id="BestOfPipsPanelL" class="BestOfPipsPanel_L">
				<Image id="BestOfPipL1" class="BestOfPip" src="file://{images}/status_icons/icon_star.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
				<Image id="BestOfPipL2" class="BestOfPip" src="file://{images}/status_icons/icon_star_empty.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
				<Image id="BestOfPipL3" class="BestOfPip" src="file://{images}/status_icons/icon_star_empty.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
			</Panel>
			<Label id="BestOfPipsText" text="#Spectator_Best_Of_Series"/>
			<Panel id="BestOfPipsPanelR" class="BestOfPipsPanel_R">
				<Image id="BestOfPipR1" class="BestOfPip" src="file://{images}/status_icons/icon_star.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
				<Image id="BestOfPipR2" class="BestOfPip" src="file://{images}/status_icons/icon_star_empty.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
				<Image id="BestOfPipR3" class="BestOfPip" src="file://{images}/status_icons/icon_star_empty.vtf" scaling="stretch-to-fit-x-preserve-aspect"/>
			</Panel>
		</Panel>
	</Panel>
      <Panel id="ExtraMatchData">
        <Panel class="hrTop" />
        <Panel class="hrBot" />
        <Panel class="ExtraMatchDataBG"/>
        <Label id="ExtraMatchDataText"/>
        <Label id="ExtraMatchDataTextL" class="ExtraMatchDataText_L"/>
        <Label id="ExtraMatchDataTextR" class="ExtraMatchDataText_R"/>
      </Panel>
      <Panel id="PickemPredictions">
        <Panel class="hrTop" />
        <Panel class="hrBot" />
        
        <ProgressBar id="PickemBar" class="PickemProgressbar"/>
        <Label id="PickemText" text="#SFUIHUD_Spectate_Predictions"/>
        <Label id="PickemPercentL" class="PickemPercent_L" text="XX%"/>
        <Label id="PickemPercentR" class="PickemPercent_R" text="XX%"/>
      </Panel>
    </Panel>
    <Panel id="SpectatorScoreboardHudScale" class="SpectatorScoreboardRootHudScale">
      <Panel id="EventDropsViewersRoot">
        <Panel id="EventLogoPanel" class="EventLogo">
          <Image id="EventLogoImage" class="EventLogo_Image" src="" textureheight="64" scaling="stretch-to-fit-x-preserve-aspect"/>
        </Panel>
        <Panel id="ViewersPanel" class="SpecViewers">
          <Label id="ViewersText" class="SpecViewers_Text" text="XXXXXX: XXX,XXX"/>
        </Panel>
        <Panel id="ItemDropPanel">
          <ItemImage id="ItemDropPanel_Item" src="file://{images_econ}/econ/status_icons/collectible_pin_guardian_small.png"  textureheight="360" texturewidth="165" scaling="stretch-to-fit-preserve-aspect" />
          <Label id="ItemDropPanel_Header" text="#SFUIHUD_Spec_Event_DroppingItemsRound"/>
          <Label id="ItemDropPanel_ItemName" text=""/>
          <Label id="ItemDropPanel_DropsRound" text=""/>
          <Label id="ItemDropPanel_Footer" text="#SFUIHUD_Spec_Event_DroppingItemsTotalDropped"/>
        </Panel>
      </Panel>
      <Panel class="TeamSpecPanel_PlayerPanels">
        <Panel id="TeamMoney_L" class="TeamSpecPanel_TeamMoney">
          <Label id="TeamMoneyHeader_L" class="TeamSpecPanel_MoneyHeader_L" text="#SFUIHUD_Spectate_TeamMoney"/>
          <Label id="TeamMoneyText_L" class="TeamSpecPanel_MoneyText_L" text="#Spectate_money_val"/>
          <Label id="TeamEQValueHeader_L" class="TeamSpecPanel_EQValueHeader_L" text="#SFUIHUD_Spectate_TeamEQValue"/>
          <Label id="TeamEQValueText_L" class="TeamSpecPanel_EQValueText_L" text="#Spectate_money_val"/>
                                                               
        </Panel>
        <Panel id="TeamSpec_L" class="TeamSpecPanel">

        </Panel>
                                    

        <Image id="EventLogo_R" class="EventLogo_Right" src="file://{images_econ}/econ/status_icons/collectible_pin_guardian_small.png"  textureheight="64" scaling="stretch-to-fit-preserve-aspect" />
        <Panel id="TeamMoney_R" class="TeamSpecPanel_TeamMoney TeamSpecPanel_TeamMoney_R">
          <Label id="TeamMoneyHeader_R" class="TeamSpecPanel_MoneyHeader_R" text="#SFUIHUD_Spectate_TeamMoney"/>
          <Label id="TeamMoneyText_R" class="TeamSpecPanel_MoneyText_R" text="#Spectate_money_val"/>
          <Label id="TeamEQValueHeader_R" class="TeamSpecPanel_EQValueHeader_R" text="#SFUIHUD_Spectate_TeamEQValue"/>
          <Label id="TeamEQValueText_R" class="TeamSpecPanel_EQValueText_R" text="#Spectate_money_val"/>
                                                               
        </Panel>
        <Panel id="TeamSpec_R" class="TeamSpecPanel TeamSpecPanel_Right">

        </Panel>
      </Panel>
    </Panel>
    

	</CSGOHudSpectator>
