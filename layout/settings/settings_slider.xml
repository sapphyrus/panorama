<root>
	<styles>
    <include src="file://{resources}/styles/csgostyles.css" />
    <include src="file://{resources}/styles/settings/settings_slider.css" />
	</styles>
  
  <CSGOSettingsSlider>
      <Panel class="left-right-flow vertical-center">
